{
  "name": "resource-service",
  "version": "1.0.0",
  "description": "The backend for the BookClubbin' app.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "start:dev": "nodemon --inspect -r dotenv/config src/server.js",
    "lint": "npx eslint ./src || exit 0",
    "lint:fix": "npx eslint ./src --fix || exit 0",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --testTimeout=10000 --runInBand --detectOpenHandles --verbose --watchAll --coverage",
    "test:ci": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --testTimeout=20000 --runInBand --detectOpenHandles --verbose --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.lnu.se:1dv613/student/ra223ai/projects/resource-service.git"
  },
  "author": "Rebecca Axelsson <ra223ai@student.lnu.se>",
  "license": "MIT",
  "private": "true",
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "google-auth-library": "^7.1.0",
    "helmet": "^4.6.0",
    "http-errors": "^1.7.2",
    "mongoose": "^5.12.11",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@lnu/eslint-config": "^1.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "*",
    "jest": "^27.0.1",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "eslintConfig": {
    "extends": "@lnu"
  },
  "nodemonConfig": {
    "ext": "js"
  }
}
